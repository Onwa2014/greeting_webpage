<form class='greetingForm' method="post" action="/greetings">
  Name: <input type="text" class="name" name=name></input>
  <br>
  <div class="radioBtn">
    <input type="radio" name="language" value="Molo, ">IsiXhosa
    <input type="radio" name="language" value="Hello, ">English
    <input type="radio" name="language" value="Hallo, ">Afrikaans
  </div>
  <input type='submit' class="submit" value="Greet"></input>
</form

<div class="entry">
    <h1> {{messages.info}}</h1>
</div>

<div class="entry">
    <h1> {{messages.count}}</h1>
</div>
<input type="button" class="reset" value="reset"></input>
